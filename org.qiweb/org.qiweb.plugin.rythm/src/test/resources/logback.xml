<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[@%-10thread] %-5level %logger{42} [ID:%X{X-QiWeb-Request-ID}, FROM:%X{X-QiWeb-Client-IP}] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="warn">
        <appender-ref ref="stdout" />
    </root>

    <logger name="org.qiweb.plugin.rythm"   level="trace"/>

</configuration>
