<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[@%-10thread] %-5level %logger{42} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="warn">
        <appender-ref ref="stdout" />
    </root>

    <logger name="io.netty"                 level="trace"/>

    <logger name="org.qiweb"                level="trace"/>
    <logger name="org.qiweb.runtime.routes" level="debug"/>

</configuration>
